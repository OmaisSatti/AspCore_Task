@model Task_AspCore.Models.DeveloperList

@{
    ViewData["Title"] = "DeveloperList";
}

<h1>All Developer List</h1>
<button type="button" class="btn btn-outline-primary float-lg-right mb-2" data-toggle="modal" data-target="#exampleModalLong">
    Add Developer
</button>

<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLong" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form method="post" asp-controller="Developer" asp-action="SaveCreate">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="modal-header">
                    <h5 class="modal-title text-danger" id="exampleModalLabel">Add New Developer</h5>
                    <button type="button" name="btnAdd" id="btnAdd" class="btn btn-outline-primary ml-2">Add More</button>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="mainbody">
                    <h4>Developer 1</h4>
                    <div class="form-group">
                        <label asp-for="Developers[0].Name"></label>
                        <input asp-for="Developers[0].Name" value="" type="text" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="Developers[0].Age"></label>
                        <input asp-for="Developers[0].Age" value="" type="number" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="Developers[0].JobTitle"></label>
                        <input asp-for="Developers[0].JobTitle" value="" type="text" class="form-control" required />
                    </div>
                </div>
                <div class="modal-footer text-danger">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-danger">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                ID
            </th>
            <th>
                Name
            </th>
            <th>
                Age
            </th>
            <th>
                JobTitle
            </th>
            <th>Edit/Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Developers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JobTitle)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Create", new { item.ID, item.Name, item.Age, item.JobTitle }, new { @class = "btn btn-success" }) |
                    @Html.ActionLink("Delete", "DeleteDeveloper", new { item.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Do you really want to delete')" })
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{
    <script type="text/javascript">
        var i = 1;
        var j = 2;

        $("#btnAdd").click(function () {
            var html = '';
            html += '<div class="form-group">';
            html += '<h4>Developer ' + j++ + '</h4>'
            html += '<label>Name</label>'
            html += '<input  class="form-control" type="text" name="Developers[' + i + '].Name" required />';
            html += '<label>Age</label>'
            html += '<input  class="form-control" type="number" name="Developers[' + i + '].Age" required />';
            html += '<label>JobTitle</label>'
            html += '<input  class="form-control" type="text" name="Developers[' + i + '].JobTitle" required />';
            html += '</div>';
            $('#mainbody').append(html);
            i++;
        });
    </script>
}
